# MongoDB Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority
MONGODB_DB_NAME=store_assistant
MONGODB_CHECKPOINTS_COLLECTION=checkpoints
MONGODB_MEMORIES_COLLECTION=customer_memories

# LLM API Keys (Choose one or both)
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...

# Model Configuration
LLM_MODEL=anthropic:claude-3-5-sonnet-latest
EMBEDDING_MODEL=openai:text-embedding-3-small

# Memory Configuration
MEMORY_TTL_SECONDS=7776000  # 90 days
SUMMARIZATION_TOKEN_THRESHOLD=2000
MAX_SUMMARY_TOKENS=150

# Application Settings
LOG_LEVEL=INFO
DEBUG_MODE=false
